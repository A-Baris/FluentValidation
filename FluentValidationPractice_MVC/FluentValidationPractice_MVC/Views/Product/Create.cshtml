@model FluentValidationPractice_MVC.ViewModels.ProductVM
@{
    ViewData["Title"] = "Create";
}

<div class="container" style="margin-top:40px" action="/manager/product/create">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Yemek Oluştur</h1>
            <form method="post" action="/product/create">
                <div class="form-group">
                    <label asp-for="Id"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="ProductName"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control"  />
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>

                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Oluştur</button>
                </div>

            </form>
        </div>
    </div>
</div>
